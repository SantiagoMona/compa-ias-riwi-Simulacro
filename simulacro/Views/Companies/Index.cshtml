<form asp-controller="Companies" asp-action="Index">
  <p>
    buscar:<input type="text" name="buscar" class="form-text"/>
    <input type="submit" class="btn btn-sm btn-dark" placeholder="buscar"> 
  </p>

</form>

<div class="d-grid gap-2 col-6 mx-auto">
  <a class="btn btn-success" asp-action="Create" asp-controller="Companies">Crear Nuevo Sector</a>
</div>

<table class="table table-striped">
    <thead>
        <th># id</th>
        <th>Logo</th>
        <th>NIT</th>
        <th>Nombre</th>
        <th>Direccion</th>
        <th>Descripcion</th>
        <th>autor</th>
        <th>Acciones</th>
    </thead>
    <tbody>
       @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td><img src="@item.Logo" style="width: 100%;"> </td>
                <td>@item.Nit</td>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Description</td>
                <td>@item.LegalRepresentative</td>
                <td> 
                    <a class="btn btn-info" asp-action="Edit" asp-controller="Companies" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-warning" asp-action="Details" asp-controller="Companies" asp-route-id="@item.Id">Ver Detalles</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Companies" asp-route-id="@item.Id" >Eliminar</a>
                </td>
            </tr>
        } 
    </tbody>
</table>