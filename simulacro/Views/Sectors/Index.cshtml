<form asp-controller="Sectors" asp-action="Index">
    <p>
        buscar:<input type="text" name="buscar" class="form-text"/>
        <input type="submit" value="buscar" class="btn btn-sm btn-dark"> 
    </p>
</form>

<div class="d-grid gap-2 col-6 mx-auto">
  <a class="btn btn-success" asp-action="Create" asp-controller="Sectors">Crear Nuevo Sector</a>
</div>


<table class="table table-striped">
    <thead>
        <th># id</th>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>autor</th>
        <th>Acciones</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Author</td>
                <td> 
                    <a class="btn btn-info" asp-action="Edit" asp-controller="Sectors" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-warning" asp-action="Details" asp-controller="Sectors" asp-route-id="@item.Id">Ver Detalles</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Sectors" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        } 
    </tbody>
</table>